{
  "compilerOptions": {
    "baseUrl": "app/",
    "outDir": "build/",
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "ghostbox/*": ["app/*"]
    },
    "typeRoots": [ "./types", "./node_modules/@types", "./node_modules"],
    "types": [ "vite/client", "vite-plugin-compile-time/client" ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
